<Page x:Class="WaferNavController.Config"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:WaferNavController"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="600"
      Title="Config">

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="38*"/>
            <ColumnDefinition Width="37*"/>
        </Grid.ColumnDefinitions>
        <Rectangle Grid.ColumnSpan="2" Fill="#FFFFFF" HorizontalAlignment="Left" Height="600" Stroke="Black" VerticalAlignment="Top" Width="600"/>
        <TabControl Grid.ColumnSpan="2" HorizontalAlignment="Left" Height="590" Margin="0,10,0,0" VerticalAlignment="Top" Width="600">
            <!--Config-->
            <TabItem Header="Config" Margin="-2,0,-15,0">
                <Grid>
                    <Image Source="astronics_logo.png" Stretch="Fill" Width="300" Margin="146,10,148,439"/>
                    <Rectangle Fill="#FFD6D6FF" Stroke="#FF9FB0FF" Margin="25,497,33,37"/>
                    <TextBlock HorizontalAlignment="Left" Margin="196,93,0,0" TextWrapping="Wrap" Text="ActivATE WaferNav" VerticalAlignment="Top" Height="40" Width="207" FontSize="24"/>
                    <Rectangle Fill="#FFFFFF" HorizontalAlignment="Left" Height="111" Margin="25,162,0,0" Stroke="Black" VerticalAlignment="Top" Width="536"/>
                    <Rectangle Fill="#FFFFFF" HorizontalAlignment="Left" Height="148" Margin="25,323,0,0" Stroke="Black" VerticalAlignment="Top" Width="536"/>
                    <!--Config Section-->
                    <TextBlock HorizontalAlignment="Left" Height="19" Margin="25,138,0,0" TextWrapping="Wrap" Text="Load Configuration File " VerticalAlignment="Top" Width="178" FontSize="14" FontWeight="Bold"/>
                    <TextBlock HorizontalAlignment="Left" Margin="25,299,0,0" TextWrapping="Wrap" Text="View / Add / Update Route" VerticalAlignment="Top" FontSize="14" FontWeight="Bold"/>
                    <TextBox HorizontalAlignment="Left" Height="33" Margin="34,178,0,0" TextWrapping="Wrap" Text="File Name" VerticalAlignment="Top" Width="266" TextChanged="TextBox_TextChanged" Background="White" BorderBrush="#FFABADB3" Foreground="#FFA2A2A2" FontSize="14"/>
                    <!--View, Add, Update Section-->
                    <Button Content="View" HorizontalAlignment="Left" Margin="247,423,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Foreground="White" Background="#FF428BCA" Height="33" FontWeight="Bold" FontSize="14" />
                    <Button Content="Add" HorizontalAlignment="Left" Margin="356,423,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Foreground="White" Background="#FF428BCA" Height="33" FontWeight="Bold" FontSize="14" />
                    <Button Content="Update" HorizontalAlignment="Left" Margin="467,423,0,0" VerticalAlignment="Top" Width="75" Click="Button_Click" Foreground="White" Background="#FF428BCA" Height="33" FontWeight="Bold" FontSize="14" />
                    <TextBox HorizontalAlignment="Left" Height="33" Margin="34,348,0,0" TextWrapping="Wrap" Text="Barcode" VerticalAlignment="Top" Width="152" TextChanged="TextBox_TextChanged_1" Foreground="Gray" FontSize="14"/>
                    <TextBox HorizontalAlignment="Left" Height="33" Margin="411,348,0,0" TextWrapping="Wrap" Text="Type" VerticalAlignment="Top" Width="131" TextChanged="TextBox_TextChanged_1" Foreground="Gray" FontSize="14"/>
                    <TextBox HorizontalAlignment="Left" Height="33" Margin="227,348,0,0" TextWrapping="Wrap" Text="Location" VerticalAlignment="Top" Width="137" TextChanged="TextBox_TextChanged_1" Foreground="Gray" FontSize="14"/>
                    <Button Content="Select File" HorizontalAlignment="Left" Margin="335,178,0,0" VerticalAlignment="Top" Width="96" Click="Button_Click" Foreground="White" Background="#FF428BCA" Height="33" FontWeight="Bold" FontSize="14" />
                    <Button Content="Set" HorizontalAlignment="Left" Margin="448,178,0,0" VerticalAlignment="Top" Width="94" Click="Button_Click" Foreground="White" Background="#FF428BCA" Height="33" FontWeight="Bold" FontSize="14" />
                    <TextBlock HorizontalAlignment="Left" Margin="34,497,0,0" TextWrapping="Wrap" Text="Status..." VerticalAlignment="Top" FontSize="14"/>
                    <Rectangle Fill="#FF0E0E6A" HorizontalAlignment="Left" Height="19" Stroke="#FF9FB0FF" VerticalAlignment="Top" Width="594"/>
                </Grid>
            </TabItem>
            <!--Status-->
            <TabItem Header="Status" Height="22" VerticalAlignment="Bottom" Margin="14,0,-18,0">
                <Grid>
                    <Image Source="astronics_logo.png" Stretch="Fill" Width="300" Margin="146,10,148,439"/>
                    <TextBlock HorizontalAlignment="Left" Margin="196,93,0,0" TextWrapping="Wrap" Text="ActivATE WaferNav" VerticalAlignment="Top" Height="40" Width="207" FontSize="24"/>
                    <Rectangle Fill="#FF0E0E6A" HorizontalAlignment="Left" Height="19" Stroke="#FF9FB0FF" VerticalAlignment="Top" Width="594"/>
                    <TextBox TextWrapping="Wrap" Text="MESSAGES" Margin="67,169,66,91" TextChanged="TextBox_TextChanged_2"/>
                </Grid>
            </TabItem>
            <!--Log Out-->
            <TabItem Header="Log Out" Margin="440,0,-444,-2">
                <Grid>
                    <Image Source="astronics_logo.png" Stretch="Fill" Width="300" Margin="146,10,148,439"/>
                    <TextBlock HorizontalAlignment="Left" Margin="196,93,0,0" TextWrapping="Wrap" Text="ActivATE WaferNav" VerticalAlignment="Top" Height="40" Width="207" FontSize="24"/>
                    <Rectangle Fill="#FF0E0E6A" HorizontalAlignment="Left" Height="19" Stroke="#FF9FB0FF" VerticalAlignment="Top" Width="594"/>
                    <TextBlock TextWrapping="Wrap" Text="Would you like to log out?" FontSize="24" Margin="159,174,148,351"/>
                    <Button Content="Yes, log out" HorizontalAlignment="Left" Margin="318,229,0,0" VerticalAlignment="Top" Width="128" Height="42" Background="#FF428BCA" Foreground="White" FontWeight="Bold" FontSize="19"/>
                    <Button Content="Cancel" HorizontalAlignment="Left" VerticalAlignment="Top" Width="130" Height="42" Foreground="White" FontWeight="Bold" FontSize="19" Margin="159,229,0,0" Background="#FF6E6E6E"/>
                </Grid>
            </TabItem>







        </TabControl>

        <!-- tabs -->

    </Grid>
</Page>
