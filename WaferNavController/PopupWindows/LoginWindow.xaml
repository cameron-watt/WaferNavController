<base:BaseWindow x:Class="WaferNavController.LoginWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:base="clr-namespace:WaferNavController"
        mc:Ignorable="d"
        Title="" Height="304" Width="489" ResizeMode="NoResize" WindowStartupLocation="CenterOwner" ShowInTaskbar="False" WindowStyle="ToolWindow" Closed="LoginWindow_Closed" Closing="LoginWindow_Closing"
        FocusManager.FocusedElement="{Binding ElementName=UsernameTextBox}">
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="*"></ColumnDefinition>
            <ColumnDefinition Width="*"></ColumnDefinition>
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <TextBlock HorizontalAlignment="Left" Margin="112,24,0,0" TextWrapping="Wrap" Text="ActivATE WaferNav Controller" VerticalAlignment="Top" Height="31" Width="262" FontSize="20" Grid.ColumnSpan="2" Grid.Row="1"/>
        <TextBox x:Name="UsernameTextBox" TextWrapping="Wrap" Text="Username" Foreground="Gray" FontSize="14" Tag="Username" Grid.Row="2" VerticalContentAlignment="Center" Margin="15,9,10,10" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />
        <TextBox x:Name="PasswordTextBox" TextWrapping="Wrap" Text="Password" Foreground="Gray" FontSize="14" Tag="Password" Grid.Row="2" Grid.Column="1" VerticalContentAlignment="Center" Margin="10,10,10,9" GotFocus="TextBox_GotFocus" LostFocus="TextBox_LostFocus" />
        <Button x:Name="LoginButton" Content="Login" Margin="15,10,10,10" Grid.Row="3" Click="LoginButton_Clicked" Grid.ColumnSpan="2" FontWeight="Bold" />
        <Image Source="../Resources/astronics_logo.png" Stretch="Fill" Margin="112,-9,112,50" Grid.ColumnSpan="2" Grid.RowSpan="2"/>
    </Grid>
</base:BaseWindow>
